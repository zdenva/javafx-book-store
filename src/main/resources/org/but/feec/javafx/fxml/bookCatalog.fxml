<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.but.feec.javafx.controller.BookCatalogController">
   <children>
      <GridPane minHeight="45.0" prefHeight="45.0" prefWidth="600.0" style="-fx-background-color: #3D3F4A;">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="312.0" minWidth="10.0" prefWidth="263.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="282.0" minWidth="10.0" prefWidth="275.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Book store" GridPane.rowIndex="1">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </padding>
            </Label>
            <HBox alignment="TOP_RIGHT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="45.0" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER_RIGHT">
                     <children>
                        <Label text="Login as" />
                        <Label text="..." />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Logout" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </GridPane>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="CENTER" prefHeight="199.0" prefWidth="600.0">
               <children>
                  <Label contentDisplay="CENTER" text="Book Catalog">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button id="bookViewButton" fx:id="bookViewButton" mnemonicParsing="false" onAction="#viewBook" text="View">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button id="buyBookButton" fx:id="bookBuyButton" mnemonicParsing="false" onAction="#buyBook" text="Buy">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView id="booksTable" fx:id="booksTable">
        <columns>
          <TableColumn id="idCol" fx:id="idCol" prefWidth="30.0" text="ID" />
          <TableColumn id="titleCol" fx:id="titleCol" prefWidth="127.0" text="Title" />
            <TableColumn id="genreCol" fx:id="genreCol" minWidth="0.0" prefWidth="86.0" text="Genre" />
            <TableColumn id="pubDateCol" fx:id="pubDateCol" minWidth="0.0" prefWidth="57.0" text="Publication Date" />
            <TableColumn id="publisherNameCol" fx:id="publisherNameCol" minWidth="0.0" prefWidth="114.0" text="Publisher Name" />
            <TableColumn id="isbnCol" fx:id="isbnCol" minWidth="0.0" prefWidth="79.0" text="ISBN" />
        </columns>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
